<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconImageView"
            android:layout_weight="1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:src="@mipmap/ic_launcher"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:id="@+id/linearLayout"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/iconImageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp">
        <TextView
                android:text="station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/stationNameTv"/>
        <TextView
                android:text="nearest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/nearestArrivalInfoTv"/>
        <TextView
                android:text="nearer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/nearerArrivalInfoTv"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>